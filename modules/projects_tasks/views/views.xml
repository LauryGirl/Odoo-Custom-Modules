<odoo>

    <!-- List View -->
    <record id="view_projects_tasks_list" model="ir.ui.view">
      <field name="name">projects_tasks.projects.list</field>
      <field name="model">projects_tasks.projects</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </list>
      </field>
    </record>

    <!-- Action -->
    <record id="action_projects" model="ir.actions.act_window">
      <field name="name">Projects</field>
      <field name="res_model">projects_tasks.projects</field>
      <field name="view_mode">list</field>
      <field name="view_id" ref="view_projects_tasks_list"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_projects_root" name="Projects"/>
    <menuitem id="menu_projects_main" name="My Projects" parent="menu_projects_root" action="action_projects"/>
</odoo>