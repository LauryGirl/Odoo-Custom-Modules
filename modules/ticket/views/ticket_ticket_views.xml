<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_ticket_form" model="ir.ui.view">
            <field name="name">ticket.ticket.form</field>
            <field name="model">ticket.ticket</field>
            <field name="arch" type="xml">
                <form string="Ticket">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="description"/>
                            <field name="date"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        
        <!-- List View -->
        <record id="view_ticket_list" model="ir.ui.view">
            <field name="name">ticket.ticket.list</field>
            <field name="model">ticket.ticket</field>
            <field name="arch" type="xml">
                <list>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="date"/>
                </list>
            </field>
        </record>
        
        <!-- Kanban View -->
        <record id="view_ticket_kanban" model="ir.ui.view">
            <field name="name">ticket.ticket.kanban</field>
            <field name="model">ticket.ticket</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_details">
                                <strong><field name="code"/></strong>
                                <div><field name="description"/></div>
                                <div><field name="date"/></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Search View -->
        <record id="view_ticket_search" model="ir.ui.view">
            <field name="name">ticket.ticket.search</field>
            <field name="model">ticket.ticket</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="date"/>
                </search>
            </field>
        </record>
        
        <!-- Action -->
        <record id="action_ticket_form" model="ir.actions.act_window">
            <field name="name">Tickets</field>
            <field name="res_model">ticket.ticket</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="search_view_id" ref="view_ticket_search"/>
            <field name="view_id" ref="view_ticket_list"/>
        </record>
        
        <!-- Menu Item -->
        <menuitem id="menu_ticket_root" name="Tickets"/>
        <menuitem id="menu_ticket_main" name="My Tickets" parent="menu_ticket_root" action="action_ticket_form"/>
    </data>
</odoo>
